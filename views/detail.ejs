<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>메인</title>
    <!-- Bootstrap core CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/font.css">
    <script src="/javascripts/script.js"></script>
    <style>
        body, html {
            margin: 0;
            padding-left: 120px;
            height: 100%;
        }

        .container {
            display: flex;
            height: 100%;
        }

        .column {
            flex: 1;
            padding: 20px;
        }

        .left-column {
            flex-basis: 30%;
            background-color: #f5f5f5;
        }

        .right-column {
            flex-basis: 70%;
        }

        .scrollable-table {
            max-height: 100%; /* 적절한 높이 값으로 변경하세요 */
            overflow-y: auto;
        }

        .data-container {
            background-color: #f1f1f1;
            padding: 20px;
            border-radius: 5px;
        }

        .data-container p {
            margin: 0;
        }

        .label {
            font-weight: bold;
            margin-bottom: 5px;
        }

        .value {
            margin-top: 0;
        }
    </style>
</head>
<body>

<% include header.ejs %>

<div class="container">
    <div class="column left-column data-container">
        <span class="label">Name:</span>
        <span class="value"><%= agent.name %></span><br>

        <span class="label">Path:</span>
        <span class="value"><%= agent.path %></span><br>

        <span class="label">Topic:</span>
        <span class="value"><%= agent.topic %></span><br>

        <span class="label">Username:</span>
        <span class="value"><%= agent.username %></span><br>

        <span class="label">Password:</span>
        <span class="value"><%= agent.password %></span><br>

        <span class="label">Database:</span>
        <span class="value"><%= agent.database %></span><br>

        <span class="label">Table:</span>
        <span class="value"><%= agent.table %></span><br>

        <span class="label">Status:</span>
        <span class="value"><%= agent.status %></span><br>

        <span class="label">Created At:</span>
        <span class="value"><%= agent.createdAt %></span><br>
    </div>
    <div class="column right-column">
        <div class="content container-fluid bg-white scrollable-table ">
            <h1 style="text-align: center">Log</h1>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col" style="width: 20%;">time</th>
                    <th scope="col" style="width: 10%;">agent</th>
                    <th scope="col" style="width: 50%;">message</th>
                </tr>
                </thead>
                <tbody>
                <% log.forEach(log => { %>
                    <tr>
                        <td><%= log.createdAt %></td>
                        <td><%= log.Agent.name %></td>
                        <td><%= log.message %></td>
                    </tr>
                <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<% include sidebar.ejs %>

<!-- Bootstrap core JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
